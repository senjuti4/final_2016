<div class="row">

<h1>Welcome to my Travel Guide.</h1>
<p>This website allows you to have more knowledge about othetr countries around you and their beautiful nature. </p>


<h3>Reviews</h3>


<br>

<% @reviews.each do |review| %>

  <div class="row">
    <div class="small-6 large-5 columns">
      <img class="th" src=<%= review.picture_url %> width="598"/>
    </div>
    <div class="small-6 large-7 columns">
      <h1><%= review.location %></h1>
      <p><%= review.description %></p>
      </div>
    </div>
    <hr>
  <% end %>

<%= link_to 'New Review', new_review_path, class: "button"  %>

<hr>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td><%= review.location %></td>
      <td><%= link_to 'Show', review %></td>
      <td><%= link_to 'Edit', edit_review_path(review) %></td>
      <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
